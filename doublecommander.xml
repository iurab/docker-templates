<?xml version="1.0"?>
<Container>
    <TemplateURL>https://raw.githubusercontent.com/iurab/docker-templates/master/doublecommander.xml</TemplateURL>
    <Date>2020-08-02</Date>
    <Beta>False</Beta>
    <Name>doublecommander</Name>
    <Project>https://doublecmd.sourceforge.io/</Project>
    <Repository>linuxserver/doublecommander</Repository>
    <Registry>https://hub.docker.com/r/linuxserver/doublecommander</Registry>
    <Network>bridge</Network>
    <Privileged>false</Privileged>
    <Support>https://doublecmd.sourceforge.io</Support>
    <Overview>Double Commander is a free cross platform open source file manager with two panels side by side.</Overview>
    <WebUI>http://[IP]:[PORT:3000]/</WebUI>
    <Icon>https://github.com/iurab/docker-templates/raw/master/img/doublecommander.png</Icon>
    <Description>Double Commander is a free cross platform open source file manager with two panels side by side. It is inspired by Total Commander and features some new ideas.</Description>
    <Networking>
        <Mode>bridge</Mode>
        <Publish>
            <Port>
                <HostPort>3000</HostPort>
                <ContainerPort>3000</ContainerPort>
                <Protocol>tcp</Protocol>
            </Port>
        </Publish>
    </Networking>
    <Data>
        <Volume>
            <HostDir>/mnt/user/appdata/doublecommander</HostDir>
            <ContainerDir>/config</ContainerDir>
            <Mode>rw</Mode>
        </Volume>
                <Volume>
            <HostDir>/mnt/user/</HostDir>
            <ContainerDir>/data</ContainerDir>
            <Mode>rw</Mode>
        </Volume>
    </Data>
    <Environment>
        <Variable>
            <Value>99</Value>
            <Name>PUID</Name>
            <Mode/>
        </Variable>
        <Variable>
            <Value>100</Value>
            <Name>PGID</Name>
            <Mode/>
        </Variable>
    </Environment>
</Container>