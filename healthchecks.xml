<?xml version="1.0"?>
<Container>
    <TemplateURL>https://raw.githubusercontent.com/iurab/docker-templates/master/healthchecks.xml</TemplateURL>
    <Date>2020-08-07</Date>
    <Beta>False</Beta>
    <Name>healthchecks</Name>
    <Project>https://github.com/healthchecks/healthchecks</Project>
    <Repository>linuxserver/healthchecks</Repository>
    <Registry>https://github.com/linuxserver/docker-healthchecks</Registry>
    <Network>bridge</Network>
    <Privileged>false</Privileged>
    <Support>https://github.com/healthchecks/healthchecks</Support>
    <Overview>healthchecks is a watchdog for your cron jobs. It's a web server that listens for pings from your cron jobs, plus a web interface.</Overview>
    <WebUI>http://[IP]:[PORT:8090]/</WebUI>
    <Icon>https://github.com/iurab/docker-templates/raw/master/img/healthchecks.png</Icon>
    <Description>healthchecks is a watchdog for your cron jobs. It's a web server that listens for pings from your cron jobs, plus a web interface.</Description>
    <Networking>
        <Mode>bridge</Mode>
        <Publish>
            <Port>
                <HostPort>8090</HostPort>
                <ContainerPort>8000</ContainerPort>
                <Protocol>tcp</Protocol>
            </Port>
        </Publish>
    </Networking>
    <Data>
        <Volume>
            <HostDir>/mnt/user/appdata/healthchecks</HostDir>
            <ContainerDir>/config</ContainerDir>
            <Mode>rw</Mode>
        </Volume>
    </Data>
    <Environment>
        <Variable>
            <Value></Value>
            <Name>SITE_ROOT</Name>
            <Mode/>
        </Variable>
        <Variable>
            <Value></Value>
            <Name>SITE_NAME</Name>
            <Mode/>
        </Variable>
        <Variable>
            <Value>*</Value>
            <Name>ALLOWED_HOSTS</Name>
            <Mode/>
        </Variable>
        <Variable>
            <Value></Value>
            <Name>SUPERUSER_EMAIL</Name>
            <Mode/>
        </Variable>
        <Variable>
            <Value></Value>
            <Name>SUPERUSER_PASSWORD</Name>
            <Mode/>
        </Variable>
        <Variable>
            <Value>99</Value>
            <Name>PUID</Name>
            <Mode/>
        </Variable>
        <Variable>
            <Value>100</Value>
            <Name>PGID</Name>
            <Mode/>
        </Variable>
    </Environment>
</Container>